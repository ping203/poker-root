    <profiles>
        <profile>
            <!-- Disable this profile to skip license check, for example 
                on automated builds -->
            <id>check-license</id>
            <activation>
                <activeByDefault>false</activeByDefault>
                <property>
                    <name>check-license</name>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>com.mycila.maven-license-plugin</groupId>
                        <artifactId>maven-license-plugin</artifactId>
                        <version>1.8.0</version>
                        <configuration>
                            <header>src/etc/header.txt</header>
                            <failIfMissing>true</failIfMissing>
                            <aggregate>true</aggregate>
                            <includes>
                                <include>src/**/*.java</include>
                            </includes>
                            <properties>
                                <owner>Cubeia Ltd</owner>
                                <year>2010</year>
                                <email>info@cubeia.com</email>
                            </properties>
                        </configuration>
                        <executions>
                            <execution>
                                <id>check-headers</id>
                                <phase>deploy</phase>
                                <goals>
                                    <goal>check</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <!-- Prevents Maven from downloading the internet every time you perform a build. -->
            <id>skip-downloads</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <repositories>
                <repository>
                    <id>cubeia-nexus</id>
                    <name>Public Cubeia Nexus</name>
                    <url>http://m2.cubeia.com/nexus/content/groups/public/</url>
                    <releases>
                        <enabled>true</enabled>
                        <updatePolicy>never</updatePolicy>
                    </releases>
                    <snapshots>
